#include<stdio.h>
#include<math.h>

double JointEntropy(double p[][4], int n, int m) {
	int i = 0, j=0;
	double H = 0;

	for (i = 0; i < n; i++) {
		for (j = 0; j < m; j++) {
			if (p[i][j] == 0) continue;
			H += p[i][j] * log2(p[i][j]);
		}
	}

	return -H;
}


int main(){
	double p[4][4] = {
		{0.125, 0.0625, 0.03125, 0.03125 },
	{ 0.0625, 0.125, 0.03125, 0.03125 },
	{ 0.0625, 0.0625, 0.0625, 0.0625 },
	{ 0.25, 0, 0, 0 } };

	double h = JointEntropy(p, 4, 4);

	printf("H=%f\r\n", h);

    return 0;
}
